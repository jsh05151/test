  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#eff6ff',
              100: '#dbeafe',
              200: '#bfdbfe',
              300: '#93c5fd',
              400: '#60a5fa',
              500: '#3b82f6',
              600: '#2563eb',
              700: '#1d4ed8',
              800: '#1e40af',
              900: '#1e3a8a',
            }
          }
        }
      }
    }
  </script>
  <style>
    .gallery-grid {
      column-count: 2;
      column-gap: 1rem;
    }
    @media (min-width: 640px) {
      .gallery-grid {
        column-count: 3;
      }
    }
    @media (min-width: 1024px) {
      .gallery-grid {
        column-count: 4;
      }
